{
  "name": "pods/pods",
  "description": "Producer Operation Data System (PODS)",
  "type": "project",
  "repositories": [
    {
      "type": "composer",
      "url": "https://packages.drupal.org/8"
    }
  ],
  "require": {
    "oomphinc/composer-installers-extender": "^2.0",
    "farmos/farmos": "2.0.0-beta7",
    "wikimedia/composer-merge-plugin": "^2.0",
    "drupal/structure_sync": "^2.0",
    "drupal/farm_nrcs": "^2.1",
    "drupal/openid_connect": "2.0.0-alpha12"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "allow-plugins": {
      "composer/installers": true,
      "cweagans/composer-patches": true,
      "drupal/core-composer-scaffold": true,
      "oomphinc/composer-installers-extender": true,
      "phpstan/extension-installer": true,
      "wikimedia/composer-merge-plugin": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "extra": {
    "composer-exit-on-patch-failure": true,
    "enable-patching": true,
    "installer-paths": {
      "web/core": [
        "type:drupal-core"
      ],
      "web/libraries/{$name}": [
        "type:drupal-library"
      ],
      "web/modules/{$name}": [
        "type:drupal-module"
      ],
      "web/profiles/farm": [
        "farmos/farmos"
      ],
      "web/themes/{$name}": [
        "type:drupal-theme"
      ],
      "drush/Commands/contrib/{$name}": [
        "type:drupal-drush"
      ]
    },
    "merge-plugin": {
      "include": [
        "web/profiles/farm/composer.libraries.json",
        "web/profiles/farm/composer.project.json"
      ],
      "merge-extra": true,
      "merge-extra-deep": true
    },
    "patches": {
      "drupal/openid_connect": {
        "Eddie's changes": "patches/openid_connect/eddies-changes.patch"
      }
    }
  }
}
